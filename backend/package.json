{
  "name": "@octocloud/validator-backend",
  "version": "1.0.0",
  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "tsc",
    "check": "npm run typecheck && npm run format:check && npm run lint",
    "console": "tsx src/console.ts",
    "dev": "tsx --watch --no-warnings ./src/server.ts",
    "dev:with-worker": "concurrently 'tsx watch ./src/app.ts' 'tsx watch ./src/worker.ts'",
    "dev:worker": "tsx watch ./src/worker.ts",
    "esbuild": "tsx ./esbuild.config.ts",
    "fix": "npm run format:package && npm run format && npm run lint:fix",
    "fix:staged": "npx lint-staged",
    "fix:staged:docker": "cd .. && npx lint-staged",
    "format": "prettier . '!./ops' --write --log-level silent",
    "format:check": "prettier . '!./ops' --check",
    "format:package": "prettier-package-json --write",
    "format:staged": "pretty-quick",
    "gitleaks": "gitleaks detect -v",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "npm run build",
    "test": "VITE_CJS_IGNORE_WARNING=true vitest run --config ./vitest.config.ts",
    "test:coverage": "VITE_CJS_IGNORE_WARNING=true vitest run --config ./vitest.config.ts --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@koa/cors": "5.0.0",
    "@needle-di/core": "^0.8.4",
    "@octocloud/backend": "1.0.23",
    "@octocloud/core": "1.0.62",
    "@octocloud/types": "1.5.30",
    "@sentry/node": "7.81.1",
    "@sentry/utils": "7.81.1",
    "@types/yesql": "4.1.1",
    "ansible-vault": "1.1.1",
    "dotenv": "16.3.1",
    "guid-ts": "1.1.2",
    "http-graceful-shutdown": "3.1.13",
    "is-docker": "3.0.0",
    "itty-router": "5.0.16",
    "koa": "2.15.3",
    "koa-body": "6.0.1",
    "koa-pino-logger": "4.0.0",
    "linked-list-typed": "1.52.0",
    "pg": "8.11.3",
    "pg-pool": "3.6.1",
    "pino": "8.16.1",
    "pino-pretty": "10.2.3",
    "pkg-dir": "7.0.0",
    "pprof": "3.2.1",
    "query-string": "8.1.0",
    "ramda": "0.28.0",
    "reflect-metadata": "0.2.2",
    "short-uuid": "4.2.2",
    "socket.io": "4.7.5",
    "socket.io-client": "4.7.5",
    "swc": "1.0.11",
    "ts-dotenv": "^0.9.1",
    "ts-enum-util": "4.0.2",
    "uuid": "9.0.0",
    "vite": "5.1.6",
    "yesql": "6.1.0",
    "yup": "0.32.11"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.18.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@octocloud/generators": "1.0.8",
    "@sentry/esbuild-plugin": "2.10.2",
    "@swc/cli": "0.1.63",
    "@swc/core": "1.3.102",
    "@types/any-base": "1.1.2",
    "@types/base64-url": "2.2.0",
    "@types/cheerio": "0.22.31",
    "@types/cookie": "0.5.1",
    "@types/koa": "2.15.0",
    "@types/koa__cors": "4.0.2",
    "@types/ms": "0.7.34",
    "@types/node": "20.8.10",
    "@types/papaparse": "5.3.8",
    "@types/pg": "8.10.2",
    "@types/ramda": "0.28.25",
    "@types/ssh2-sftp-client": "9.0.2",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "@vitest/coverage-v8": "1.5.3",
    "concurrently": "8.2.2",
    "esbuild": "0.19.11",
    "esbuild-plugin-pino": "2.1.0",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unused-imports": "3.0.0",
    "prettier": "3.1.1",
    "prettier-package-json": "2.8.0",
    "pretty-quick": "4.0.0",
    "supertest": "6.3.4",
    "tsx": "4.7.2",
    "typescript": "5.6.3",
    "vitest": "1.5.3",
    "vitest-mock-extended": "1.3.1"
  },
  "lint-staged": {
    "./package.json": "npm run format:package",
    "*": "npm run format",
    "*.(ts|js)": [
      "npm run lint:fix"
    ]
  }
}
