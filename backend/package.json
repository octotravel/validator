    "@types/ms": "0.7.34",
    "@types/node": "22.9.0",
    "@types/papaparse": "5.3.8",
    "@types/pg": "8.10.2",
    "@types/ramda": "0.28.25",
    "@types/ssh2-sftp-client": "9.0.2",
    "@types/supertest": "6.0.3",
    "@types/uuid": "9.0.2",
    "@vitest/coverage-v8": "3.1.4",
    "audit-ci": "7.1.0",
    "concurrently": "8.2.2",
    "esbuild": "0.25.8",
