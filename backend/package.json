{
  "private": true,
  "name": "@octocloud/validator",
  "version": "1.0.0",
  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "tsc",
    "build:dry": "tsc --noEmit",
    "build:dry:ci": "tsc --noEmit --tsBuildInfoFile ./.cache/tsc",
    "check": "npm run build:dry && npm run format && npm run lint",
    "console": "tsx src/console.ts",
    "dev": "tsx --watch --no-warnings ./src/server.ts",
    "dev:with-worker": "concurrently 'tsx watch ./src/app.ts' 'tsx watch ./src/worker.ts'",
    "dev:worker": "tsx watch ./src/worker.ts",
    "esbuild": "tsx ./esbuild.config.ts",
    "fix": "biome check --write .",
    "format": "biome format",
    "format:fix": "biome format --write .",
    "generate:api:go-city": "npx orval --config ./src/api/v1/goCity/apiClient/goCityOrval.config.ts",
    "generate:api:parques-de-sintra": "npx orval --config ./src/vendors/parquesDeSintra/apiClient/parquesDeSintraOrval.config.ts",
    "generate:api:rocket-rez": "npx orval --config ./src/vendors/rocketRez/apiClient/rocketRezOrval.config.ts",
    "lint": "biome lint",
    "lint:fix": "biome lint --write .",
    "test": "VITE_CJS_IGNORE_WARNING=true vitest run --config ./vitest.config.ts",
    "test:coverage": "VITE_CJS_IGNORE_WARNING=true vitest run --config ./vitest.config.ts --coverage",
    "lefthook": "cd .. && lefthook install",
    "audit": "audit-ci --config ./audit-ci.json"
  },
  "dependencies": {
    "@date-fns/tz": "1.2.0",
    "@date-fns/utc": "2.1.0",
    "@google-cloud/cloud-sql-connector": "1.6.0",
    "@koa/cors": "5.0.0",
    "@needle-di/core": "0.10.1",
    "@octocloud/backend": "^1.0.31",
    "@octocloud/core": "^1.0.78",
    "@octocloud/types": "^2.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@sentry/node": "10.1.0",
    "@types/yesql": "4.1.1",
    "dotenv": "16.3.1",
    "guid-ts": "1.1.2",
    "http-graceful-shutdown": "3.1.13",
    "is-docker": "3.0.0",
    "itty-router": "5.0.16",
    "koa": "^2.16.2",
    "koa-body": "6.0.1",
    "koa-pino-logger": "4.0.0",
    "linked-list-typed": "1.52.0",
    "date-fns": "4.1.0",
    "date-fns-tz": "3.2.0",
    "p-limit": "4.0.0",
    "pg": "8.11.3",
    "pg-pool": "3.6.1",
    "pino": "8.16.1",
    "pino-pretty": "10.2.3",
    "pkg-dir": "7.0.0",
    "query-string": "8.1.0",
    "ramda": "0.28.0",
    "short-uuid": "4.2.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "4.7.5",
    "ts-dotenv": "^0.9.1",
    "ts-enum-util": "4.0.2",
    "uuid": "9.0.0",
    "yesql": "6.1.0",
    "yup": "0.32.11"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.18.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
